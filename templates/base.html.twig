<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{{ 'meta_title'|trans }}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <script src="https://use.fontawesome.com/releases/v5.12.1/js/all.js" crossorigin="anonymous"></script>
            <!-- Google fonts-->
            <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
            <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
                <div class="container">
                    <a class="navbar-brand js-scroll-trigger" href="{{ url('home') }}">{{ 'header.home'|trans }}</a><button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">Menu <i class="fas fa-bars"></i></button>
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="{{ url('auctions_list') }}">{{ 'header.auctions'|trans }}</a></li>
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="{{ url('my_bids') }}">{{ 'header.my_bids'|trans }}</a></li>
                                <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="{{ url('fos_user_security_logout') }}">{{ 'header.logout'|trans }}</a></li>
                            {% else %}
                                <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="{{ url('fos_user_security_login') }}">{{ 'header.login'|trans }}</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}
        {% block content %}

        {% endblock %}

        {% block footer%}
            <footer class="footer text-center">
                <div class="container">
                    <div class="row">
                        <!-- Footer Location-->
                        <div class="col-lg-4 mb-5 mb-lg-0">
                            <h4 class="text-uppercase mb-4"></h4>
                            <p class="lead mb-0"></p>
                        </div>
                        <!-- Footer Social Icons-->
                        <div class="col-lg-4 mb-5 mb-lg-0">
                            <h4 class="text-uppercase mb-4">{{ 'footer.media'|trans }}</h4>
                            <a class="btn btn-outline-light btn-social mx-1" href="https://github.com/paco-parra"><i class="fab fa-fw fa-github"></i></a>
                            <a class="btn btn-outline-light btn-social mx-1" href="https://trello.com/b/hhiXmSic/eactivos-test"><i class="fab fa-fw fa-trello"></i></a>
                            <a class="btn btn-outline-light btn-social mx-1" href="https://www.linkedin.com/in/pacoparra/"><i class="fab fa-fw fa-linkedin-in"></i></a>
                        </div>
                        <!-- Footer About Text-->
                        <div class="col-lg-4">
                            <h4 class="text-uppercase mb-4">{{ 'footer.personal_data'|trans }}</h4>
                            <p class="lead mb-0"><i class="fas fa-mobile-alt"></i> {{ 'footer.phone'|trans }}</p>
                            <p class="lead mb-0"><i class="fas fa-envelope"></i> {{ 'footer.mail'|trans }}</p>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <!-- Bootstrap core JS-->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
            <!-- Third party plugin JS-->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
        {% endblock %}
    </body>
</html>

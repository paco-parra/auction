{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="form-user" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <input class="form-control" type="email" id="username" name="_username" placeholder="{{ 'form.label.email'|trans }}" required="required" />

    <input class="form-control" type="password" id="password" name="_password" placeholder="{{ 'form.label.email'|trans }}" required="required" />

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'login.remember_me'|trans }}
        </label>
    </div>

    <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'login.submit'|trans }}" />
</form>
